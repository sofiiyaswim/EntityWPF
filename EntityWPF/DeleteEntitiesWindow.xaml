<Window x:Class="EntityWPF.DeleteEntitiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityWPF"
        mc:Ignorable="d"
      Title="Удаление записи из базы данных" Height="250" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Button Name="cancelBtn" Grid.Column="1" Grid.Row="1" Margin="10,20" FontSize="22" Click="cancelBtn_Click" >Отмена</Button>
        <Button Name="deleteBtn" Grid.Column="2" Grid.Row="1" Margin="10,20" FontSize="22" Click="deleteBtn_Click">Удалить</Button>

        <TextBlock Name="textDelEntitiesWindow" FontSize="22" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">Удалить запись</TextBlock>
    </Grid>
</Window>
